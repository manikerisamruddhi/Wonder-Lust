<% layout('/layout/boilerplate') %>
<div class="row">
    <div class="col-8 offset-2">
        <h3>Create new List</h3>
        <form action="/listings" method="post" enctype="multipart/form-data" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listings[title]" placeholder="Enter title" class="form-control" required>
                <div class="valid-feedback">Looks good</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listings[description]" placeholder="Enter description" class="form-control" required></textarea>
                <div class="invalid-feedback">This field is required</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input type="file" name="image" class="form-control">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listings[price]" placeholder="Enter price" class="form-control" required>
                <div class="invalid-feedback">Enter a valid number!</div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listings[location]" placeholder="Enter location" class="form-control" required>
                <div class="invalid-feedback">Enter a valid location!</div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listings[country]" placeholder="Enter country" class="form-control" required>
                <div class="invalid-feedback">Enter a valid country!</div>
            </div>
            <button class="btn btn-dark add-btn">Add</button>
        </form>
    </div>
</div>
